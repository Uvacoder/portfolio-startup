{
  // Code formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  // https://adamtuttle.codes/blog/2021/tabs-vs-spaces-its-an-accessibility-issue/
  "editor.insertSpaces": false,
  "files.associations": {
    // Syntax highlighting for .webc files
    "*.webc": "html",
    // Ensure new CSS features are parsed as expected
    "*.css": "postcss"
  },
  // Hide files from the sidebar to keep things tidy
  "files.exclude": {
    "node_modules/": false,
    "package-lock.json": true
  }
}
